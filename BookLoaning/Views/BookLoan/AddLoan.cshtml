@using BookLoaning.Models
@{
    ViewBag.Title = "BookLoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PersonDTO

@using (Html.BeginForm("AddLoan", "BookLoan", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class=" col-md-12">
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "col-md-7 control-label" })
                <div class="col-md-7">
                    @Html.TextBoxFor(x => x.Name, new { @required = "required" })
                    @Html.ValidationMessageFor(x => x.Name)
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.LastName, new { @class = "col-md-7 control-label" })
                <div class="col-md-7">
                    @Html.TextBoxFor(x => x.LastName, new { @required = "required" })
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
            </div>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

}



